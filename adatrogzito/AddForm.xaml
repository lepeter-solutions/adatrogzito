<Window x:Class="adatrogzito.NewEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Entry" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Név:" Margin="0,5"/>
            <TextBox x:Name="nev" Margin="0,5"/>

            <TextBlock Text="Kor:" Margin="0,5"/>
            <TextBox x:Name="kor" Margin="0,5"/>

            <TextBlock Text="Email:" Margin="0,5"/>
            <TextBox x:Name="email" Margin="0,5"/>

            <TextBlock Text="Telefonszám:" Margin="0,5"/>
            <TextBox x:Name="telefonszam" Margin="0,5"/>

            <TextBlock Text="Lakcím:" Margin="0,5"/>
            <TextBox x:Name="lakcim" Margin="0,5"/>

            <TextBlock Text="Neme:" Margin="0,5"/>
            <ComboBox x:Name="neme" Margin="0,5">
                <ComboBoxItem Content="Férfi"/>
                <ComboBoxItem Content="Nő"/>
                <ComboBoxItem Content="Egyéb"/>
            </ComboBox>

            <TextBlock Text="Megjegyzés:" Margin="0,5"/>
            <TextBox x:Name="megjegyzes" Margin="0,5"/>

            <Button Content="Mentés" HorizontalAlignment="Center" Margin="10" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>